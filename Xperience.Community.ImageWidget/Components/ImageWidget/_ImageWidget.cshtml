@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Kentico.PageBuilder.Web.Mvc
@using Xperience.Community.ImageWidget.Components.ImageWidget
@inject IPageBuilderDataContextRetriever pageBuilderContext
@model ImageWidgetViewModel

@if (pageBuilderContext.Retrieve().EditMode)
{
    <partial name="~/Components/PageBuilder/InlineEditors/ImageWidgetImageSelector/_ImageWidgetImageSelector.cshtml" model="Model" />
}
else
{
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Url.Content(Model.ImageUrl)" width="@Model.Width" height="@Model.Height" alt="@Model.Alt" class="@Model.CssClass" />
    }
}